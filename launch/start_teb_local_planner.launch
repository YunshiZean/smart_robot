<launch>

  <!-- 导航路径规划公共参数 -->
  <rosparam file="$(find autonomous_driving)/config/move_base/move_base_params.yaml"          command="load" ns="move_base"/>
  <rosparam file="$(find autonomous_driving)/config/move_base/base_global_planner_param.yaml" command="load" ns="move_base"/>

  <!-- 导航TEB局部路径规划器参数 -->
  <rosparam file="$(find autonomous_driving)/config/move_base/teb_local_planner_params.yaml"  command="load" ns="move_base"/>

  <!-- 导航代价地图公共参数 -->
  <rosparam file="$(find autonomous_driving)/config/move_base/costmap_common_params.yaml"     command="load" ns="move_base/global_costmap"/>
  <rosparam file="$(find autonomous_driving)/config/move_base/costmap_common_params.yaml"     command="load" ns="move_base/local_costmap"/>
  <rosparam file="$(find autonomous_driving)/config/move_base/local_costmap_params.yaml"      command="load" ns="move_base"/>
  <rosparam file="$(find autonomous_driving)/config/move_base/global_costmap_params.yaml"     command="load" ns="move_base"/>

  <!-- 启动导航节点 -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- 导航代价地图与路径规划器对应车型参数 -->
    <rosparam file="$(find autonomous_driving)/config/move_base/ackermann/teb_local_planner_params.yaml"  command="load"/>
    <rosparam file="$(find autonomous_driving)/config/move_base/ackermann/costmap_car_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find autonomous_driving)/config/move_base/ackermann/costmap_car_params.yaml" command="load" ns="local_costmap" />
  </node>

    <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find autonomous_driving)/configuration_files/move_base.rviz" />

</launch>


